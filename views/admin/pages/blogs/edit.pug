extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    if(roleUser.permissions.includes("blogs_edit"))
        +alert-success("10000")
        +alert-error("10000")
        h1(class="mb-4") Chỉnh sửa bài viết
        form(
            action=`${prefixAdmin}/blogs/edit/${blog.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value=blog.title
                )
            div(class="form-group")
                label(for="parent_id") Danh mục cha
                select(
                name="parent_id"
                id="parent_id"
                class="form-control"
                )
                    option(value="") -- Chọn danh mục cha --
                    if(records)
                        +select-tree(records,1,blog.parent_id)
            div(
                class="form-group"
                form-preview-image
            )
                label(for="thumbnail") Ảnh
                input(
                    type="file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    input-preview-image
                )
                img(
                    src=(blog.thumbnail?blog.thumbnail:"")
                    class="preview-image"
                    preview-image
                )
            div(class="form-group")
                label(for="position") Vị trí
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    placeholder="Tự động tăng"
                    min="1"
                    value=blog.position
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(blog.status=="active"?true:false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(blog.status=="inactive"?true:false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                label(for="content") Mô tả
                textarea(
                    type="text"
                    class="form-control textarea-tinymce"
                    id="content"
                    name="content"
                    rows="10"
                    textarea-mce
                ) #{blog.content}
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Sửa
