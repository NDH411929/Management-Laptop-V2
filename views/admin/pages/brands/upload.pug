extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    if(roleUser.permissions.includes("brands_create"))
        +alert-success(5000)
        +alert-error(5000)
        h1(class="mb-4") Thêm ảnh

        form(
            action=`${prefixAdmin}/brands/upload-multi/images-brand/${idBrand}`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group" form-preview-image)
                label(for="listImage") Ảnh
                input(
                    type="file"
                    class="form-control-file"
                    id="listImage"
                    name="listImage"
                    accept="image/*"
                    input-preview-image
                    multiple
                )
                ul(style="padding-left:0").list-preview.mt-3
                img(src="" class="preview-image" preview-image)
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Thêm
